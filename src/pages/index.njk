                      :class="active === idx ? 'opacity-70' : ''"
                      @mouseenter="active = idx"
                      @click="pick(item)"
                      x-ref="['opt'+idx]"
                    >
                      <span x-text="item"></span>
                    </button>
                  </template>

                  <!-- No results hint -->
