          </div>
          <div data-animate-fade-up>
            {{ Button("See Offers", "#", "light-green") }}
          </div>
        </div> -->

        <div
          class="mt-8 md:mt-10 xl:max-w-[36.4vw] 3xl:max-w-[699px] flex flex-col md:items-start gap-5 lg:gap-7 3xl:gap-9"
          x-data="{
            q: '',
            open: false,
            loading: false,
            items: [],
            active: -1,
            selected: null,
            triedSubmit: false,

            // DEMO data (remove when API wired)
            demo(q){
              const all = [
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
                'ABC St Albany Creek QLD 4035',
              ];
              if(!q) return [];
              const qq = q.toLowerCase();
              return all.filter(x => x.toLowerCase().includes(qq)).slice(0, 8);
            },

            async search(){
              this.selected = null;           
              this.triedSubmit = false;   
              const q = this.q.trim();
              if(q.length < 2){
                this.items = [];
                this.open = false;
                this.active = -1;
                return;
              }

              this.loading = true;
              this.open = true;

              // DEMO
              await new Promise(r => setTimeout(r, 150));
              this.items = this.demo(q);

              // REAL API
              // const res = await fetch(`/api/address?q=${encodeURIComponent(q)}`);
              // const data = await res.json();
              // this.items = data?.items ?? [];

              this.loading = false;
              this.active = this.items.length ? 0 : -1;
            },

            pick(text){
              this.q = text;
              this.selected = text;
              this.open = false;
              this.items = [];
              this.active = -1;
              this.triedSubmit = false;
            },

            onEnter(){
              if(this.open && this.active >= 0 && this.items[this.active]){
                this.pick(this.items[this.active]);
              } else {
                this.trySubmit();
              }
            },

            trySubmit(){
              this.triedSubmit = true;

              // require a picked item 
              if(!this.selected){
                return;
              }

              // redirect / submit
              // window.location.href = `/offers?address=${encodeURIComponent(this.selected)}`;
            },

            move(dir){
              if(!this.open || !this.items.length) return;
              const next = this.active + dir;
              if(next < 0) this.active = this.items.length - 1;
              else if(next >= this.items.length) this.active = 0;
              else this.active = next;

              this.$nextTick(() => {
                const el = this.$refs['opt'+this.active];
                if(el) el.scrollIntoView({ block: 'nearest' });
              });
            }
          }"
        >
          <!-- INPUT + DROPDOWN WRAP -->
          <div data-animate-fade-up class="w-full relative z-50" @click.outside="open=false">
            <input
              type="text"
              class="h4 bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10"
              placeholder="Enter Address"
              x-model="q"
              @focus="q.trim().length >= 2 ? open = true : open = false"
              @input.debounce.250ms="search()"
              @keydown.escape.prevent="open=false"
              @keydown.enter.prevent="onEnter()"
              @keydown.arrow-down.prevent="move(1)"
              @keydown.arrow-up.prevent="move(-1)"
              :aria-expanded="open.toString()"
            />

            <!-- DROPDOWN PANEL -->
            <div
              x-cloak
              x-show="open"
              x-transition.opacity.duration.150ms
