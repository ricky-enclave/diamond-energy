{% extends "layouts/base.njk" %}
{% set title = "Make the Switch | Diamond Energy" %}

{% from "components/button.njk" import Button %}
{% from "components/spacing.njk" import sectionTop, sectionBottom %}


{% block content %}


<section class="{{ sectionTop('large') }} {{ sectionBottom('none') }} bg-light text-dark-blue">
  <div class="container">
    <div class="flex flex-col gap-8 md:gap-12 xl:gap-20 3xl:gap-28">
      <h1 data-animate-heading class="title">Make the Switch for Good</h1> 
      <p data-animate-fade-up>
        By completing the online sign-up form below.
        <br/><br/>
        Get ready with your identificationÂ (eg. drivers licence).</p>
        <form action="" class="flex flex-col gap-8 md:gap-10 items-start max-w-[845px]">
            <div data-animate-fade-up class="flex flex-col gap-5 w-full">
              <p>Set up Residential or Business Account?*</p>
              <label class="flex items-center gap-8 cursor-pointer" for="residential">
                <input class="hidden peer" type="radio" name="business-account" id="residential">
                <span class="size-7 rounded-full bg-light-green peer-checked:bg-dark-green"></span>
                <p>Residential</p>
              </label>
              <label class="flex items-center gap-8 cursor-pointer" for="business">
                <input class="hidden peer" type="radio" name="business-account" id="business">
                <span class="size-7 rounded-full bg-light-green peer-checked:bg-dark-green"></span>
                <p>Business</p>
              </label>
            </div>

            <div data-animate-fade-up class="flex flex-col gap-5 w-full">
              <p>What would you like to do?*</p>
              <label class="flex items-center gap-8 cursor-pointer" for="current-address">
                <input class="hidden peer" type="radio" name="like-to-do" id="current-address">
                <span class="size-7 rounded-full bg-light-green peer-checked:bg-dark-green"></span>
                <p>Join us at current address</p>
              </label>
              <label class="flex items-center gap-8 cursor-pointer" for="new-address">
                <input class="hidden peer" type="radio" name="like-to-do" id="new-address">
                <span class="size-7 rounded-full bg-light-green peer-checked:bg-dark-green"></span>
                <p>Moving in (set up for new address)</p>
              </label>
            </div>

            <div data-animate-fade-up class="flex flex-col gap-5 w-full">
              <p>Search your Supply Address*</p>
              <input type="text" class="bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10" placeholder="Start typing in address.....">
              <div class="grid grid-cols-1 gap-x-8 gap-y-5 lg:grid-cols-3">
                <input type="text" class="bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10" placeholder="City">
                <input type="text" class="bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10" placeholder="State">
                <input type="text" class="bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10" placeholder="Postcode">
              </div>
            </div>

            <div data-animate-fade-up class="flex flex-col gap-5 w-full">
              <p>Do you know the Supply Address NMI?</p>
              <input type="text" class="bg-white text-dark-green placeholder:text-dark-green/40 rounded-full focus:outline-none w-full h-14 3xl:h-[61px] px-6 xl:px-10" placeholder="10-11 digits from electricity bill">
            </div>

            <div data-animate-fade-up>
              {{ Button("Next", "#", "light-green") }}
            </div>

        </form>
    </div>
  </div>
</section>
 
 

